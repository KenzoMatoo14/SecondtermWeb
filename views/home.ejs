<%- include("partials/header") ; -%>

<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgba(0, 0, 0, 0.8);">
  <div class="container-fluid">
    <a class="navbar-brand" href="#" data-bs-toggle="modal" data-bs-target="#videoModal">
      <img src="/img/Logo.png" alt="Logo" width="60" height="40">
    </a>
  </div>
</nav>

<div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="videoModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content" style="background-color: rgba(0, 0, 0, 0.9);">
      <div class="modal-header">
        <h5 class="modal-title" id="videoModalLabel" style="color: white;">Encontro un secreto de la pagina :)</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <iframe width="100%" height="400" src="https://www.youtube.com/embed/sg0SmgoSMg4" 
          title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; 
          encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>


<form action="/search" method="get" class="d-flex justify-content-center align-items-center ">
  <div class="input-group" style="width: 50%;">
    <input type="text" name="name" class="form-control bg-dark text-light" placeholder="Buscar personaje" required style="border: 1px solid #6c757d;">
    <button class="btn btn-secondary" type="submit">Buscar</button>
  </div>
</form>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <div class="card h-100 text-center" style="height: 100%; background-color: rgba(34, 34, 34, 0.9); border: 1px solid #fff; color: #f0f0f0;">
        <% if (character) { %>
          <img src="<%= character.image %>" alt="<%= character.name %>" class="card-img-top" style="height: 500px; width: 100%; object-fit: contain;">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mt-2"><%= character.name %></h5>
          </div>
        <% } else { %>
          <p>No se pudo cargar la informaci√≥n del personaje.</p>
        <% } %>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card h-100" style="height: 100%; background-color: rgba(34, 34, 34, 0.9); border: 1px solid #fff; color: #f0f0f0;">
        <%- include("partials/characterDetails", { character: character }) %>
      </div>
    </div>
  </div>

  <%- include("partials/paginacion"); -%>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<%- include("partials/footer") ; -%>

